<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @course.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @course.description %>
</p>

<p>
  <strong>Start:</strong>
  <%= @course.start %>
</p>

<p>
  <strong>Finish:</strong>
  <%= @course.finish %>
</p>

<h2>
  <strong>List subject of this course</strong>
</h2>
<table>
  <tr><th>Name</th><th>Description</th><th>Status</th><th></th></tr>
  <% if @enrollment_subjects.count != 0 %>
    <% @enrollment_subjects.each do |enrollment_subject| %>
      <tr>
        <td><%= enrollment_subject.courses_subject.subject.name %></td>
        <td><%= enrollment_subject.courses_subject.subject.description %></td>
        <td>
          <% case enrollment_subject.status %>
          <% when 0 %>
            NOT START
          <% when 1 %>
            TRAINING
            <%= link_to "show", subject_path(enrollment_subject.subject) %>
          <% else %>
            FINISHED
          <% end %>
        </td>
      </tr>
    <% end %>
  <% else %>
  <tr><td>Course not start yet</td></tr>
  <% end %>
</table>

<h2>
  <strong>List user attend this course</strong>
</h2>
<table>
  <tr><th>Name</th><th></th></tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= link_to "view user", user %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'Back', root_path %>
