<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Framgia Training System", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home",   root_path %></li>
        <li><%= link_to "Help",    static_pages_help_path %></li>
        <li><%= link_to "About",   static_pages_about_path %></li>
        <li><%= link_to "Contact",  static_pages_contact_path %></li>
        <% if logged_in? %>
          <% if current_user.suppervisor? %>
            <li><%= link_to "Users", suppervisor_users_path %></li>
            <li><%= link_to "Courses", suppervisor_courses_path %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <% if current_user.suppervisor? %>
                <li><%= link_to "Profile", suppervisor_user_path(current_user) %></li>
              <% else %>
                <li><%= link_to "Profile", current_user %></li>
              <% end %>
              <li><%= link_to "Settings", "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>