<h1>Subjects Infomation</h1>

<table>
  <thead>
    <tr>
      <th>Name    </th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @subject.name %></td>
        <td><%= @subject.description %></td>
        <td><%= link_to "Show", @subject %></td>
        <td><%= link_to "Edit", edit_subject_path(@subject) %></td>
        <td><%= link_to "Delete", @subject, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
  </tbody>
</table>