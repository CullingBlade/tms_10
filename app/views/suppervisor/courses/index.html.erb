<h1>Listing courses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Start</th>
      <th>Finish</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.description %></td>
        <td><%= course.start %></td>
        <td><%= course.finish %></td>
        <td><%= link_to 'Show', suppervisor_course_path(course) %> |</td>
        <td><%= link_to 'Destroy', suppervisor_course_path(course), 
                                   method: :delete, data: { confirm: 'Are you sure?' } %> |</td>
        <% if course.start.nil? %>
          <td><%= link_to 'Edit', edit_suppervisor_course_path(course) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

