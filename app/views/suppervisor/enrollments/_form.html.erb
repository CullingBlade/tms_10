<%= form_for [:suppervisor, @course] do |f| %>
  <h2>USER CHECK listing for this course</h2>
  <div class="field">
    <table>
      <%= f.collection_check_boxes :user_ids, @users, :id, :name do |b| %>
        <tr>
          <%= b.label do %>
            <td><%= b.text %></td>
            <td class="selection_checkbox"><%= b.check_box %></td>
          <% end %>
        </tr>
      <% end %>
    </table>
  </div><br>
  <div class="actions">
    <%= f.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>